{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["./*"],
      "@middlewares/*": ["middlewares/*"],
      "@services/*": ["services/*"],
      "@routes/*": ["routes/*"],
      "@const/*": ["const/*"],
      "@util/*": ["util/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [{ "transform": "typescript-transform-paths" }]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "./src/**.test.ts"]
}
